{
  "name": "@ekgrahn/halo-api",
  "version": "1.1.0",
  "description": "Node wrapper for the Halo API. Returns a Promise that resovles to the JSON response from the API.",
  "main": "./src/halo.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "build": "tsc -d --outDir dist",
    "docs": "run-s docs:clear docs:generate",
    "docs:generate": "./node_modules/.bin/jsdoc -R ./README.md -c ./conf.json -t ./node_modules/ink-docstrap/template -d ./docs -r ./src/",
    "docs:clear": "rm -r ./docs"
  },
  "author": "ekgrahn",
  "license": "ISC",
  "devDependencies": {
    "@microsoft/tsdoc": "0.13.2",
    "@types/jest": "27.0.1",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "dotenv": "10.0.0",
    "eslint": "7.16.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-tsdoc": "0.2.14",
    "ink-docstrap": "1.3.2",
    "jest": "27.2.0",
    "npm-run-all": "4.1.5",
    "ts-jest": "27.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EthanGrahn/halo-api.git"
  },
  "files": [
    "src/*"
  ],
  "dependencies": {
    "axios": "0.21.1"
  }
}
